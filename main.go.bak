// Note: the example only works with the code within the same release/branch.
package main

import (
	"fmt"
	"strings"
//	"time"

        settingsv1alpha1 "k8s.io/api/settings/v1alpha1"
//	"k8s.io/apimachinery/pkg/api/errors"
	metav1 "k8s.io/apimachinery/pkg/apis/meta/v1"
	"k8s.io/client-go/kubernetes"
	"k8s.io/client-go/rest"
        "k8s.io/api/core/v1"
)

func main() {
	// creates the in-cluster config
	config, err := rest.InClusterConfig()
	if err != nil {
		panic(err.Error())
	}
	// creates the clientset
	clientset, err := kubernetes.NewForConfig(config)
	if err != nil {
		panic(err.Error())
	}
        //endpoints, err := clientset.CoreV1().Endpoints("contrail").List(metav1.ListOptions{})
        //if err != nil {
        //        panic(err.Error())
        //}
        //fmt.Printf("There are %d endpoints in the cluster\n", len(endpoints.Items))
        //for index, element := range endpoints.Items {
        //        fmt.Printf("Index: %d, item: %s", index, element)
        //}
        //cassandraEndpoint, _ := clientset.CoreV1().Endpoints("contrail").Get("cassandra", metav1.GetOptions{})
        //fmt.Printf("cass ep: %s", cassandraEndpoint)
        endpointList := make(map[string][]string)
        contrailEndpointsList, err := clientset.CoreV1().Endpoints("contrail").List(metav1.ListOptions{})
        if err != nil {
                panic(err.Error())
        }
        for _, ep := range contrailEndpointsList.Items {
            fmt.Printf(" Endpoint %s \n", ep.Name)
            for _, eps := range ep.Subsets {
                for _, addr := range eps.Addresses {
                    fmt.Printf(" IP %s \n", addr.IP)
                    endpointList[addr.IP] = append(endpointList[addr.IP], ep.Name)
                }
            }
        }
        configMap := &v1.ConfigMap{
            ObjectMeta: metav1.ObjectMeta{
                Name: "preset-cm",
            },
            Data: map[string]string{
                "key1": "value1",
                "key2": "value2",
            },
        }
        for x, ep := range endpointList{
            fmt.Printf("%s: %s\n",x, strings.Join(ep,","))
        } 
        configMapClient := clientset.CoreV1().ConfigMaps("contrail")
        configMapClient.Create(configMap)
        podPresetCheck, _ := clientset.SettingsV1alpha1().PodPresets("contrail").
                                 Get("vrouter-preset",metav1.GetOptions{})
        if podPresetCheck.Name != "" {
            fmt.Printf("pod preset: %s already exists\n", podPresetCheck.Name)
        } else {
            podPresetClient := clientset.SettingsV1alpha1().PodPresets("contrail")
            podPreset := &settingsv1alpha1.PodPreset{
                ObjectMeta: metav1.ObjectMeta{
                    Name: "vrouter-preset",
                },
                Spec: settingsv1alpha1.PodPresetSpec{
                    Selector: metav1.LabelSelector{
                        MatchLabels: map[string]string{
                            "role": "ContrailVrouter",
                        },
                    },
                    EnvFrom: []v1.EnvFromSource{
                        v1.EnvFromSource{
                            ConfigMapRef: &v1.ConfigMapEnvSource{
                                LocalObjectReference: v1.LocalObjectReference{
                                    Name: "preset-cm",
                                },
                            },
                        },
                    },
                    VolumeMounts: []v1.VolumeMount{
                        v1.VolumeMount{
                            Name: "test",
                            MountPath: "/mnt/test",
                        },
                    },
                    Volumes: []v1.Volume{
                        v1.Volume{
                            Name: "test",
                            VolumeSource: v1.VolumeSource{
                                EmptyDir: &v1.EmptyDirVolumeSource{
                                },
                            },
                        },
                    },
                },
            }
            result, err := podPresetClient.Create(podPreset)
            if err != nil {
                    panic(err)
            }
            fmt.Printf("Created Pod Preset %q.\n", result.GetObjectMeta().GetName())
        }
}
